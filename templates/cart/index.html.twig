{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}



{% block body %}
    <div class="container mt-5">
        <h1>Mon Panier</h1>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for element in data %}
                    <tr>
                        <td>{{ element.product.name }}</td>
                        <td>{{ element.product.price }} €</td>
                        <td>{{ element.quantity }}</td>
                        <td>{{ element.quantity * element.product.price }} €</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a href="{{ path('cart_add', { id: element.product.id }) }}" class="btn btn-sm btn-success">+</a>
                                <a href="{{ path('cart_remove', { id: element.product.id }) }}" class="btn btn-sm btn-dark">-</a>
                                <a href="{{ path('cart_delete', { id: element.product.id }) }}" class="btn btn-sm btn-danger">Supprimer</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Votre panier est vide</td>
                    </tr>         
                {% endfor %}    
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right"><strong>Total</strong></td>
                    <td><strong>{{ total }} €</strong></td>
                    <td>
                        <a href="{{ path('cart_empty') }}" class="btn btn-sm btn-danger">Vider</a>
                        <a href="{{ path('app_stripe') }}" class="btn btn-sm btn-primary">Valider Commande</a>
                    </td>
                </tr>
            </tfoot>
        </table>  
    </div>
{% endblock %}
